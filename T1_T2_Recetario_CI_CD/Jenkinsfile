pipeline {
    agent any
    
    stages {
        stage('Test') {
            steps {
                // Ejecutar pruebas de JUnit
                script {
                    try {
                        // Ejecutar las pruebas JUnit definidas en el proyecto Maven
                        sh 'mvn test'
                    } catch (err) {
                        // Si las pruebas fallan, marcar el paso como fallido
                        currentBuild.result = 'FAILED'
                        error "Las pruebas JUnit fallaron"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    // Instalar dependencias del frontend
                    bat "cd T1_T2_Recetario_CI_CD/frontend && npm install"
                    // Compilar el frontend
                    bat "cd T1_T2_Recetario_CI_CD/frontend && npm run build"
                }
            }
        }
        stage('Deploy') {
            steps {
                // Copiar los archivos compilados al directorio de despliegue
                bat 'xcopy "T1_T2_Recetario_CI_CD/frontend/dist" "C:/xampp/htdocs" /s/y'
            }
        }
    }
}
